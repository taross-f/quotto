{
  "name": "quotto",
  "version": "1.1.0",
  "description": "CLI tool to generate beautiful quote images with Quotto",
  "main": "src/cli.tsx",
  "type": "module",
  "bin": {
    "quotto": "./src/cli.tsx"
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun run --watch src/cli.tsx",
    "start": "bun run src/cli.tsx",
    "test": "bun test",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --apply src/",
    "format": "biome format --write src/"
  },
  "keywords": ["quote", "image", "cli", "typescript", "quotto"],
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/taross-f/quotto",
  "repository": {
    "type": "git",
    "url": "https://github.com/taross-f/quotto.git"
  },
  "bugs": {
    "url": "https://github.com/taross-f/quotto/issues"
  },
  "files": [
    "src/**/*",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "ink": "^4.4.1",
    "react": "^18.2.0",
    "commander": "^11.1.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "typescript": "^5.3.3",
    "bun-types": "^1.0.25"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}